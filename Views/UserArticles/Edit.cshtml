@model Project4Geeks.Models.Article

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="col-lg-1"></div>


<!-- Introduction div -->
<div class="col-lg-6">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Edit Article</legend>

            <div>
                @Html.HiddenFor(model => model.ArID)
            </div>

            <div>
                @Html.HiddenFor(model => model.UID, "User")
            </div>

            <div class="editor-label">
                Language
            </div>
            <div class="editor-field">
                @Html.DropDownList("LID", String.Empty)
                @Html.ValidationMessageFor(model => model.LID)
            </div>

            <div class="editor-label">
                @Html.HiddenFor(model => model.AID, "Admin")
            </div>

            <div class="editor-label">
                Title
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>

            <div class="editor-label">
                Description
            </div>
            <div class="editor-field">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>
            <br />
            <p style="margin-top: 2%">
                <input class="btn btn-primary" style="width:100%" type="submit" value="Save" /><br />

            </p>
        </fieldset>
    }

    <div style="margin-top: 2%">
        @Html.ActionLink("Back to List", "Index", "UserProjects", new { @class = "btn btn-default", style = "width:100%" })

    </div>
</div>