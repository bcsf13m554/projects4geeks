@model IEnumerable<Project4Geeks.Models.Question>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    Project4Geeks.Models.User user = Session["UserData"] as Project4Geeks.Models.User;
}



<p style="margin-bottom:1%">
    @Html.ActionLink("Ask a Question", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-responsive table-hover" >

@foreach (var item in Model)
{
    <tr>
        <td>
            <h2 class="col-lg-6">@Html.DisplayFor(modelItem => item.Title)</h2>
            <div class="col-lg-6" style="text-align: right">
                <span class="btn btn-default btn-xs disabled">@Html.DisplayFor(modelItem => item.Language.Language1)</span>
                by: <span class="btn btn-danger btn-xs disabled">@Html.DisplayFor(modelItem => item.User.FName)</span>
            </div>
            <div class="col-lg-12">
                <p>@item.Statement</p>
            </div>
            <br />
            <br />
            @{
                if (item.UID == user.UID)
                {
                    <p class="col-lg-4" style="text-align: left;">@Html.ActionLink("Delete", "DeleteConfirmed", new { id = item.QID }, new { @class = "btn btn-danger", style = "width:100%" })</p>
                    <p class="col-lg-4" style="text-align: center;">@Html.ActionLink("Edit", "Edit", new { id = item.QID }, new { @class = "btn btn-default", style = "width:100%" })</p>
                }
                else
                {
                    <p class="col-lg-8" style="text-align: left;"></p>
                }
            }
            <p class="col-lg-4" style="text-align: right;">@Html.ActionLink("Details", "Details", new { id = item.QID }, new { @class = "btn btn-primary", style = "width:100%" })</p>
        </td>

    </tr>
}

</table>
