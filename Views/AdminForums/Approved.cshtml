@model IEnumerable<Project4Geeks.Models.Question>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Index</h2>

<p>   
     @Html.ActionLink("Goto Unapproved Questions", "Index", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-responsive" style="text-align: center">
    <tr>
        <th style="text-align: center">
            ID
        </th>
        <th style="text-align: center">
            User Name
        </th>
        <th style="text-align: center">
            Language
        </th>

        <th style="text-align: center">
            Title
        </th>

        <th style="text-align: center">
            Action
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Language.Language1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin.Name)
            </td>
            <td>
                @Html.ActionLink("View", "Details", new { id = item.QID, Approved = true }, new { @class = "btn btn-default btn-xs" })
                @Html.ActionLink("Delete", "DeleteConfirmed", new { id = item.QID, page = "Approved" }, new { @class = "btn btn-danger btn-xs" })


            </td>
        </tr>
    }

</table>